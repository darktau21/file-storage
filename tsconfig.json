{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "ts-node": {
        "transpileOnly": true
    },
    "exclude": ["drizzle.config.ts"],
    "include": ["src/**/*", "types/index.d.ts"]
}
